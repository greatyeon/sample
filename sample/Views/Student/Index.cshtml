@model List<sample.Models.SchoolListModels>

@{
    ViewBag.Title = "Student Database";
}
<style>
table thead tr th {
    text-align: center;
}
</style>
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<table style="border: 1px solid black; width: 500px;  text-align: center">
    <tr>
        <td>StudentID</td>
        <td><input id="studentModelsID" type="number" maxlength="10"/></td>
    </tr>
    <tr>
        <td>LastName</td>
        <td><input id="lastName"/></td>
    </tr>
    <tr>
        <td>FirstMidName</td>
        <td><input id="firstMidName"/></td>
    </tr>
</table>
<p><input type="button" value="저장" id="insertDB"/></p>
<br/>

<table id="studentList" style="border: 1px solid black; width: 800px; border-spacing: 20px; text-align: center">
    <thead>
    <tr>
        <th>EnrollmentID</th>
        <th>CourseID</th>
        <th>StudentID</th>
        <th>Grade</th>
        <th>Title</th>
        <th>Credits</th>
        <th>LastName</th>
        <th>FirstMidName</th>
        <th>EnrollmentDate</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var data in Model)
    {
        <tr>
            <td>@data.EnrollmentModelsID</td>
            <td>@data.CourseModelsID</td>
            <td>@data.StudentModelsID</td>
            <td>@data.Grade</td>
            <td>@data.Title</td>
            <td>@data.Credits</td>
            <td>@data.LastName</td>
            <td>@data.FirstMidName</td>
            <td>@data.EnrollmentDate</td>
        </tr>
    }
    </tbody>
</table>
<div>
    <p>
        id검색 : <input type="number" id="searchId" maxlength="10"/>
        <input type="button" id="searchIdOk" value="검색" disabled="true"/>
        <input type="button" id="studentListOk" value="전체목록" />
    </p>
</div>